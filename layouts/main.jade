-var exports=pages[page]
include /mixins/index

doctype html
html(lang="fr")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=Edge")
    meta(
      name="viewport"
      content="width=device-width, init-scale=1.0, minimal-ui"
    )
    title #{exports.title}
    block head
    link(
      rel="stylesheet"
      href="#{page == '404' ? '/stylesheets/index.css' : uri('stylesheets/index.css', page)}"
    )
    //- link(
    //-   rel="stylesheet"
    //-   href="http://basehold.it/25/255/42/85/0.1"
    //- )
  body
    .putainde-Header
      .Grid
        .Grid-cell.u-size5of12
          include /partials/header
        .Grid-cell.u-size7of12
          +Navigation(lang.navigation, page)
    .putainde-Main
      block main
    .putainde-Footer
      include /partials/footer
    block end
    script(src="#{page == '404' ? '/scripts/index.js' : uri('scripts/index.js', page)}")
    include /partials/analytics
