:root {
  var-putainde-Header-height-s: calc(var(line-height) * 1.2);
  var-putainde-Logo-size-s: calc(var(putainde-Header-height-s) * 1.4);
  var-putainde-Header-height-l: calc(var(line-height) * 2);
  var-putainde-Logo-size-l: calc(var(putainde-Header-height-l) * 1.5);
}

.putainde-Header
  background: var(putainde-Color-red)
  background: linear-gradient(to bottom, var(putainde-Color-red), var(putainde-Color-red) 10%)
  line-height: var(putainde-Header-height-l);
  @media (max-width:54em)
    .Grid-cell
      text-align: center

.putainde-SiteTitle
  position: relative
  display: inline-block
  padding: 0 0 0 calc(var(putainde-Logo-size-s) + 1rem);
  @media (min-width: 54em) {
    padding: 0 0 0 calc(var(putainde-Logo-size-l) + 1rem);
  }
  text-decoration: none

  span
    display: inline-block
    font-size: 1.2em
    color: MAIN_TEXT
    font-family: var(font-family-title);
  @media (max-width:54em)
    font-size: var(font-size-small);
    //margin: .25em 0

.putainde-Logo {
  position: absolute;
  top: 50%;
  left: 0;
  width: var(putainde-Logo-size-s);
  height: @width;
  @media (min-width: 54em) {
    width: var(putainde-Logo-size-l);
    height: @width;
  }
  transition: .2s;
  transform: translateY(-50%);
}

.putainde-SiteTitle:hover .putainde-Logo {
  transform: translateY(-50%) rotate(-2deg) scale(1.2);
}
