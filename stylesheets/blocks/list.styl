.putainde-List-item
  position: relative
  padding: 0 0 0 --line-height * 3
  //min-height: 4em
  @media (max-width:28em)
    padding-left: 3em

.putainde-List-item:not(:last-child) {
  border-bottom: 1px solid #eee
  margin-top: -1px;
}

.putainde-List-item--link
  border: none;
  min-height: 0;
  text-align: center;
  padding: 0;
  margin-bottom: --line-height;

  a
    color: MAIN_COLOR
    line-height: --line-height*2;
    display: block
    text-decoration: none
    border: 1px solid transparent
    margin: -1px 0
    border-radius: .2em

    &:hover
    &:focus
      background: linear-gradient(to bottom, #fff, #fafafa)
      border-color: #ddd
    &:active
      border-color: #ddd
      background: linear-gradient(to bottom, #f0f0f0, #fff)

.putainde-List-item--hidden
  height: 0
  padding: 0
  border: none
  min-height: 0
  overflow: hidden

.putainde-List-authorPicture
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 0;
  width: --line-height * 2;
  border-radius: 100%

.putainde-Message
  font-size: 3em
  color: #ccc
  text-align: center
  font-weight: 700
  font-family: Avenir, "Helvetica Neue", Helvetica, sans-serif

.putainde-Message--hidden
  display: none

.putainde-List-title
  color: #444
  text-decoration: none
  display: block
  margin: 0

.putainde-Tags
  list-style-type: none
  padding: 0
  margin: calc(var(line-height) / 2) 0

.putainde-Tag
  display: inline-block
  background: #fdfdfd
  box-shadow: inset 0 0 0 1px rgba(#000, .03)
  padding: 0 1em
  margin-right: .2rem
  line-height: 1.7
  border-radius: 1em

.putainde-List-author
  position: absolute
  color: #888
  bottom: 0
  right: 0
  text-align: right
  @media (max-width:34em)
    position: static
  a
    font-weight: 700
    text-decoration: none
    color: #666
