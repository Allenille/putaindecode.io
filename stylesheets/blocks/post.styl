.putainde-Post
  text-align: center

.putainde-Title
  color: #222
  font-family: Avenir, "Helvetica Neue", Helvetica, sans-serif
  top: 0
  position: relative
  position: -webkit-sticky
  z-index: 3
  background: #fff
  background: linear-gradient(to bottom, #fff 60%, rgba(#fff, 0))

.putainde-Title--home
  text-align: center

.putainde-Title-authorPicture
  position: absolute
  border-radius: 100%
  width: 3em
  left: -(@width + 1.5)
  top: 50%
  margin-top: unit(@width/-2, em)

.putainde-Title-text
  font-size: 1.9em
  margin: .25em 0
  padding: .25em 0
  font-weight: 400
  @media (max-width:28em)
    font-size: 1.325em

.putainde-Post-contents
  text-align: left
  color: #444
  padding: 1em 0
  font-size: .9375em
  p
    line-height: 1.6
  a
    color: MAIN_COLOR
    text-decoration: none
    &:hover
    &:focus
      text-decoration: underline
  tt
  code
  pre
    font-family: Consolas, "Liberation Mono", Courier, monospace
  pre
    overflow: scroll
    font-size: unit(.8125/@font-size,em)
    background: #fafafa
    -webkit-font-smoothing: subpixel-antialiased
    padding: 1em
    border: 1px solid #ddd
    border-radius: .3em
    color: #444
    margin: 1.5em 0
    box-shadow: inset 0 0 0 .25em rgba(#000, .02)
    line-height: 1.5
  .hljs-string
  .hljs-number
  .hljs-tag .hljs-value
    color: #cf1d58
  .hljs-keyword
    color: #000
  .hljs-comment
  .hljs-doctype
  .hljs-preprocessor
    color: #999
  .hljs-class
  .hljs-title
    color: #2c4379
  .hljs-attribute
    color: #49629a
  .hljs-value
    color: #2e4f89
