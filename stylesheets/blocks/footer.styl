  font-size: .833rem
  color: #666
  margin: 0

.putainde-Footer-text--small
  font-size: .833em

.putainde-Footer-list
  text-align: center
  display: block
  list-style-type: none
  margin: 0
  padding: 0
  font-size: .833rem
